@model RevSliderModel
@{
    //page title
    ViewBag.Title = T("Plugins.Widgets.RevolutionSlider.RevSlider.EditRevSliderDetails").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("RevSlider");
    Layout = "_AdminLayout";

}

<form asp-controller="RevSlider" asp-action="Edit" method="post" id="RevSlider-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Plugins.Widgets.RevolutionSlider.RevSlider.EditRevSliderDetails") - @Model.Name
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugins.Widgets.RevolutionSlider.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="RevSlider-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Widgets.RevolutionSlider/Views/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="RevSlider-delete" />