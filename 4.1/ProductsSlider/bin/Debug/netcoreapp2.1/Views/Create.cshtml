@model ProductSliderModel
@using Nop.Web.Framework.UI;
@{
    Layout = "_ConfigurePlugin";

    //page title
    ViewBag.Title = T("Plugins.Widgets.RevolutionProductsSlider.ProductSliders.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("ProductSlider");
}
<form asp-controller="WidgetsProductSlider" asp-action="Create" method="post" id="product-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Plugins.Widgets.ProductsSlider.ProductSliders.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("plugins.widgets.productsslider.backtolist")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @*@await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_category_details_buttons" })*@
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Widgets.ProductsSlider/Views/_CreateOrUpdate.cshtml", Model)
</form>

